@inject ToastService Service

<PureText Type="Typo.H1" Id="alerts">Alerts</PureText>
<div class="mb-10">
    <PureText Type="Typo.H3">Basic toasts</PureText>
    <PureToast State="PureState.Success">This is a success toast.</PureToast>
    <PureToast State="PureState.Info">This is an informational toast.</PureToast>
    <PureToast State="PureState.Warning">This is a warning toast.</PureToast>
    <PureToast State="PureState.Error">This is an error toast.</PureToast>
</div>
<div class="mb-10">
    <PureText Type="Typo.H3">Demo toasts</PureText>
    <PureButton OnClick="() => AddToast(PureState.Success)">Success toast</PureButton>
    <PureButton OnClick="() => AddToast(PureState.Error)">Error toast</PureButton>
    <PureButton OnClick="() => AddToast(PureState.Info)">Info toast</PureButton>
    <PureButton OnClick="() => AddToast(PureState.Warning)">Warning toast</PureButton>
</div>

@code {

    public async Task AddToast(PureState state)
    {
        await Service.AddToast("Adding random toast", state);
    }
}