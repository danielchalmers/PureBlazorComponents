@inherits PureComponent
@using Microsoft.AspNetCore.Components.Forms
<InputSelect class="@ApplyStyle("block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-brand-600 sm:text-sm sm:leading-6")"
             Value="Value"
             ValueExpression="() => Value"
             ValueChanged="@((string s) => Pick(s))">
    @ChildContent
</InputSelect>

@code {
    [Parameter, EditorRequired] public required string Value { get; set; }
    public EventCallback<string> OnSelected { get; set; }

    private void Pick(string s)
    {
        Value = s;
        OnSelected.InvokeAsync(Value);
    }

}
