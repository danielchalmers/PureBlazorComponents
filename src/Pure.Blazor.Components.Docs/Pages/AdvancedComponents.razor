@page "/components/advanced"

<div class="grid grid-cols-4 pt-10">
    <div class="hidden sm:block sm:col-span-1">
            <PureVertNav/>
    </div>
    <div class="col-span-4 sm:col-span-3">
        <Header1>Advanced Components</Header1>
        <div class="mb-8">
            <Header2>Syntax Highligher</Header2>
            <div class="mb-10">
                <p class="dark:text-gray-200">The below code snippet is your example and your documentation!</p>
                <PureCode Text="@syntax" Language="@PureCode.Html" Caption="Example" Styles="my-4"/>
            </div>

            <div class="mb-10">
                <p class="dark:text-gray-200 mt-4">Several languages have support built in, discoverable via intellisense in the <code>PureCode</code> component.</p>
                <PureCode Text="@markup" Language="@PureCode.Csharp" Caption="Example" Styles="my-4"></PureCode>
            </div>
        </div>
    </div>
</div>

@code {

    private string syntax = @"<PureCode Text=""@markup"" Language=""@PureCode.Html"" />

<!-- optional caption -->
 <PureCode Text=""@markup"" Language=""@PureCode.Html"" Caption=""Example""/>

@code
{
    private string markup = @""<PureButton Color=""PureColor.Primary"" Size=""PureSize.Small"">Small</PureButton>"";
}
";

    private string markup = @"public static string Html = ""html"";
public static string Markup = ""markup"";
public static string Xml = ""xml"";
public static string Svg = ""svg"";
public static string MathMl = ""mathml"";
public static string Rss = ""rss"";
public static string Css = ""css"";
public static string Javascript = ""js"";
public static string Razor = ""razor"";
public static string Csharp = ""csharp"";
";

}
