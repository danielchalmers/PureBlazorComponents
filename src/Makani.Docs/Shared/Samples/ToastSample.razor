@inject ToastService Service

<MkText Type="Typo.H1" Id="alerts">Alerts</MkText>
<div class="mb-10">
    <MkText Type="Typo.H3">Basic toasts</MkText>
    <PureToast State="PureState.Success">This is a success toast.</PureToast>
    <PureToast State="PureState.Info">This is an informational toast.</PureToast>
    <PureToast State="PureState.Warning">This is a warning toast.</PureToast>
    <PureToast State="PureState.Error">This is an error toast.</PureToast>
</div>
<div class="mb-10">
    <MkText Type="Typo.H3">Demo toasts</MkText>
    <MkButton OnClick="() => AddToast(MkState.Success)">Success toast</MkButton>
    <MkButton OnClick="() => AddToast(MkState.Error)">Error toast</MkButton>
    <MkButton OnClick="() => AddToast(MkState.Info)">Info toast</MkButton>
    <MkButton OnClick="() => AddToast(MkState.Warning)">Warning toast</MkButton>
</div>

@code {

    public async Task AddToast(PureState state)
    {
        await Service.AddToast("Adding random toast", state);
    }

}