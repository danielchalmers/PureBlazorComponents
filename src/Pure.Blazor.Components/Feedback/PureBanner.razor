@using Pure.Blazor.Components.Display
@inherits PureComponent
<div class="@ApplyStyle(ContainerCss)">
    <div class="flex gap-4 items-center">
        <div class="pl-1">
            <PureIcon Icon="IconInfo"/>
            @* <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"> *@
            @*     <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"/> *@
            @* </svg> *@
        </div>
        <div class="flex flex-col">
            <div class="font-bold">@Title</div>
            <div class="@ContentContainerStyles">
                @if (ChildContent != null)
                {
                    @ChildContent
                }
                else
                {
                    @Body
                }
            </div>
        </div>
    </div>
</div>

@code {
    public string? ContainerCss { get; set; }
    [Parameter] public string? Title { get; set; }

    [Parameter] public string? Body { get; set; }

    [Parameter] public Accent Accent { get; set; } = Accent.Brand;
    [Parameter] public PureVariant Variant { get; set; }

    /// <summary>
    /// Styles applied to the content container
    /// </summary>
    [Parameter]
    public string? ContentContainerStyles { get; set; }

    protected override void BuildCss()
    {
        ContainerCss = $"{PureTheme.Banner.Base} {PureTheme.Banner.Variants[Variant][Accent]}";
    }

}
