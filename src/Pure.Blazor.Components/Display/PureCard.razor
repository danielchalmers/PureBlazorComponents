@namespace Pure.Blazor.Components
@inherits PureComponent

@if (Alignment == PureCardAlignment.Top)
{
    <div class="rounded sm:rounded-sm md:rounded-xs overflow-hidden shadow-lg border border-solid border-neutral-200 bg-white dark:bg-gray-800 dark:border-transparent @Styles">
        @if (!string.IsNullOrWhiteSpace(ImageUrl))
        {
            <img src="@ImageUrl">
        }
        <div class="px-6 py-4">
            @if (!string.IsNullOrWhiteSpace(Title))
            {
                <Header2>@Title</Header2>
            }
            <p class="text-base">
                @ChildContent
            </p>
        </div>
    </div>
}
else
{
    <div class="w-full shadow-lg rounded sm:rounded-sm md:rounded-xs border border-solid border-neutral-200 bg-white dark:bg-gray-800 dark:border-transparent @Styles">
        @if (!string.IsNullOrWhiteSpace(ImageUrl))
        {
            <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover text-center overflow-hidden" style="background-image: url('@ImageUrl')">
            </div>
        }
        <div class="p-4 flex flex-col justify-between leading-normal">
            <div>
                @if (!string.IsNullOrWhiteSpace(Title))
                {
                    <Header2>@Title</Header2>
                }
                <p class="text-gray-800 text-base">@ChildContent</p>
            </div>
        </div>
    </div>
}

@code {

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public PureCardAlignment Alignment { get; set; }

    [Parameter]
    public string? ImageUrl { get; set; }
}
